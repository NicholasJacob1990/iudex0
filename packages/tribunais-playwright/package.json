{
  "name": "tribunais-playwright",
  "version": "0.1.0",
  "description": "Biblioteca para automação de tribunais (PJe, e-SAJ, eproc) com suporte a certificado digital",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "api": "tsx src/api/server.ts",
    "api:dev": "tsx watch src/api/server.ts",
    "mcp": "tsx src/mcp/server.ts",
    "example": "tsx examples/basic.ts",
    "example:pje": "tsx examples/pje-peticionar.ts",
    "example:eproc": "tsx examples/test-eproc-login.ts"
  },
  "keywords": [
    "pje",
    "esaj",
    "eproc",
    "tribunal",
    "automacao",
    "certificado-digital",
    "playwright",
    "oab"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "eventemitter3": "^5.0.1",
    "express": "^5.2.1",
    "playwright": "^1.48.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
